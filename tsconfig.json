{
  "compilerOptions": {
    "baseUrl": "src/lib", // important for 'paths' option
    "declaration": true,
    "declarationDir": "./dist",
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist",
    "paths": {
      "@": [""],
      "@application-layer/*": ["4-application-layer/*"],
      "@data-link-layer/*": ["1-data-link-layer/*"],
      "@examples/*": ["examples/*"],
      "@network-layer/*": ["2-network-layer/*"],
      "@physical-layer/*": ["0-physical-layer/*"],
      "@shared/*": ["shared/*"],
      "@transport-layer/*": ["3-transport-layer/*"],
      "@visualization/*": ["visualization/*"]
    },
    "sourceMap": true,
    "target": "es5"
  },
  "exclude": [],
  "include": ["src/**/*"]
}
