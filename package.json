{
  "name": "audio-network-lite",
  "version": "0.0.0",
  "description": "",
  "keywords": [],
  "author": "Robert Rypu≈Ça",
  "license": "MIT",
  "scripts": {
    "build": "yarn clean && yarn lint && yarn prettier && yarn test:coverage && webpack --env.PRODUCTION && rimraf dist/demo-node.d.ts",
    "clean": "rimraf dist && rimraf coverage",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "npm-check": "npm-check --skip-unused -u",
    "prettier": "prettier src/**/*.{ts,html} -c",
    "start": "yarn clean && webpack-dev-server --env.DEVELOPMENT --open",
    "start:node": "yarn clean && webpack --env.DEVELOPMENT && rimraf dist/demo-node.d.ts && node dist/demo-node.js",
    "test": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:report-coverage": "cat ./coverage/lcov.info | coveralls"
  },
  "main": "dist/audio-network-lite-v0.0.0.js",
  "types": "dist/lib/index.d.ts",
  "files": [
    "dist/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robertrypula/audio-network-lite.git"
  },
  "bugs": {
    "url": "https://github.com/robertrypula/audio-network-lite/issues"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node"
  },
  "prettier": {
    "singleQuote": true
  },
  "devDependencies": {
    "@types/jest": "^24.0.17",
    "@types/node": "^12.7.2",
    "copy-webpack-plugin": "^5.0.4",
    "coveralls": "^3.0.6",
    "html-webpack-exclude-assets-plugin": "^0.0.7",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.9.0",
    "npm-check": "^5.9.0",
    "prettier": "1.18.2",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3",
    "typescript-formatter": "^7.2.2",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.39.2",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.8.0"
  }
}
