{
  "name": "audio-network-lite",
  "version": "0.0.0",
  "description": "",
  "keywords": [],
  "author": "Robert Rypu≈Ça",
  "license": "MIT",
  "scripts": {
    "build": "npm run clean && npm run test && npm run lint && npm run lint:tsfmt:verify && webpack --env.PRODUCTION && rimraf dist/demo-node.d.ts",
    "dev-node": "npm run clean && webpack --env.DEVELOPMENT && rimraf dist/demo-node.d.ts && node dist/demo-node.js",
    "dev-browser": "npm run clean && webpack-dev-server --env.DEVELOPMENT --open",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "lint:tsfmt:verify": "tsfmt --verify --no-tsfmt --no-tslint --no-tsconfig --no-vscode",
    "lint:tsfmt:replace": "tsfmt --replace --no-tsfmt --no-tslint --no-tsconfig --no-vscode",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "clean": "rimraf dist && rimraf coverage",
    "npm-check:u": "npm-check --skip-unused -u"
  },
  "main": "dist/audio-network-lite-v0.0.0.js",
  "types": "dist/lib/index.d.ts",
  "files": [
    "dist/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robertrypula/audio-network-lite.git"
  },
  "bugs": {
    "url": "https://github.com/robertrypula/audio-network-lite/issues"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/node": "^12.6.8",
    "copy-webpack-plugin": "^5.0.4",
    "coveralls": "^3.0.5",
    "html-webpack-exclude-assets-plugin": "^0.0.7",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.8.0",
    "npm-check": "^5.9.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3",
    "typescript-formatter": "^7.2.2",
    "uglifyjs-webpack-plugin": "^2.1.3",
    "webpack": "^4.38.0",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2"
  }
}
